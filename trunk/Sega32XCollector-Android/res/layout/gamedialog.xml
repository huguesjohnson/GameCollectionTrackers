<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/layout_gamedialogroot">

	<TextView 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/gamedialog_textview_gametitle"/>

	<CheckBox 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/gamedialog_checkbox_game" 
	    android:text="@string/checkbox_game"/>
	
	<CheckBox 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="@string/checkbox_box" 
	    android:id="@+id/gamedialog_checkbox_box"/>
	
	<CheckBox 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/gamedialog_checkbox_instructions" 
	    android:text="@string/checkbox_instructions"/>
	
</LinearLayout>
