<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.huguesjohnson.segacdcollector"
    android:installLocation="auto"
	android:versionCode="3"
	android:versionName="3">
      
	<uses-sdk
		android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
	
    <application
        android:icon="@drawable/icon" 
        android:label="@string/app_name"
        android:allowBackup="true"
        android:theme="@style/scd_theme">
		<activity android:name=".SegaCDCollectorActivity"
                  android:label="@string/app_name">
					<intent-filter>
						<action android:name="android.intent.action.MAIN" />
						<category android:name="android.intent.category.LAUNCHER" />
					</intent-filter>
		</activity>
        <activity android:name="com.huguesjohnson.segacdcollector.EbayActivity" />
        <activity android:name="com.huguesjohnson.segacdcollector.ExportActivity" />
       	<activity android:name="com.huguesjohnson.segacdcollector.ImportActivity" />
	</application>

</manifest> 